<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/poster_backdrop"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:fitsSystemWindows="true"
        android:contentDescription="@string/poster_backdrop_content_desc"
        app:layout_collapseMode="parallax" />

    <com.popularmovies.mcondle.popularmovies.layout.SlidingTabLayout
        android:id="@+id/details_sliding_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_grey_800"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/details_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>